<!-- 样式区 -->
<style scoped>

  .FluidGridGallery{
    position: relative;
    width: 100%;
    background-color: black;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  :where(.gallery) {
    --_height: 250px; 
    --_gap: .5rem;
    --_grid-rows: var(--_height) var(--_height) var(--_height);
    --_height-hover: calc(var(--_height) * 2);
    --_height-not-hover: calc(var(--_height) / 2);
    width: 100%;  
    max-width: 1200px;
    display: grid;
    gap: var(--_gap);
  }

  @media (min-width: 720px) {
    :where(.gallery) {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  :where(.gallery > div) {
    height: fit-content;
    display: grid;
    grid-template-rows: var(--_grid-rows);
    gap: var(--_gap);
    transition: grid-template-rows 300ms ease-in-out;
  }

  :where(.gallery > div > article) {
    position: relative;
  }

  :where(.gallery > div > article > div) {
    position: absolute;
    bottom: 0;
    left: 0;
    background: #00000070;
    font-size: 0.65rem;
    color: white;
    display: flex;
    align-items: center;
    gap: .25rem;
    padding: .15rem 0.5rem;
  }

  :where(.gallery > div > article > div > span) {
    font-size: 1em;
    color: rgba(255, 255, 255, 0.884);
  }

  :where(.gallery img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  :where(.gallery > div:has(> article:nth-child(1):hover)) {
    --_grid-rows: var(--_height-hover) var(--_height-not-hover) var(--_height-not-hover);
  }

  :where(.gallery > div:has(> article:nth-child(2):hover)) {
    --_grid-rows: var(--_height-not-hover) var(--_height-hover) var(--_height-not-hover);
  }

  :where(.gallery > div:has(> article:nth-child(3):hover)) {
    --_grid-rows: var(--_height-not-hover) var(--_height-not-hover) var(--_height-hover);
  }

  :where(.gallery > div > article:hover) {
    background-color: rgb(151, 152, 201);
    color: #FFF;
  }

  :where(.material-fill-1) {
    font-variation-settings:
      'FILL' 1,
      'wght' 400,
      'GRAD' 0,
      'opsz' 48;
  }
</style>